
<div class="posts-list">
    <ul>
    {% for post in posts %}
        <li>
            <p>
                {{ post.title }}
                <a href="{{ path('news_show', {slug: post.slug}) }}">View</a>
                <a href="{{ path('news_edit', {slug: post.slug}) }}">Edit</a>
            </p>
            <p>
                Publish date: <time>{{ post.publishTime|date("Y-m-d h:m") }}</time>
            </p>
            <p>
                Languages: {{ post.language.name }}
                {% for child in post.blogPosts %}
                    {{ child.language.name }}
                {% endfor %}
                <a href="{{ path('news_add_child', {slug: post.slug}) }}">Add language</a>
            </p>
            <p>
                {% if post.isReleasable %}
                    <span class="approved">
                        <a href="{{ path('news_release', {slug: post.slug}) }}">Remove release status</a>
                    </span>
                {% else %}
                    <span class="approved">
                        <a href="{{ path('news_release', {slug: post.slug}) }}">Approve release status</a>
                    </span>
                {% endif %}
            </p>
        </li>
    {% endfor %}
    </ul>
</div>
