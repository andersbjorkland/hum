{% extends 'base.html.twig' %}

{% block title %}Policy Themes{% endblock %}

{% block body %}

<div class="form-wrapper">
    <h1>Policy Themes</h1>
    <ul>
    {% for theme in themes %}
        <li>
            <img src="{{ filePath ~ '/' ~ theme.symbol.fileName }}" alt="{{ theme.symbol.alt }}" />
            <h2>{{ theme.title }}</h2>
            <div class="foldable">
                <h3 class="fold-action">Description</h3>
                <div class="fold-content">
                    <p>{{ theme.language.name }}</p>
                    <p>{{ theme.text }}</p>
                    <p><a href="{{ path("theme_edit", {id: theme.id}) }}">Edit</a></p>
                </div>
            </div>
        </li>
    {% endfor %}
    </ul>


</div>
{% endblock %}
