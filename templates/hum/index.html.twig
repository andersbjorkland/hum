{% extends 'base.html.twig' %}

{% block title %}Hum{% endblock %}

{% block body %}

    <div class="form-wrapper">
        <h1>Hum Overview</h1>
        <ul>
            {% for hum in hums %}
                {% if hum.parent is empty %}
                <li>
                    <h2>{{ hum.policy ~ ' : ' ~ hum.date|date }}</h2>
                    <div class="foldable">
                        <h3 class="fold-action">Description</h3>
                        <div class="fold-content">
                            <p>Theme: {{ hum.policy.policyTheme }}</p>
                            <p>Language: {{ hum.language }}</p>
                            <div>
                            {% if hum.hums is not empty %}
                                {% for child in hum.hums %}
                                    <p>
                                        Language version: {{ child.language }}
                                        <a href="{{ path('hum_edit', {hum: child.id}) }}">Edit child</a>
                                    </p>
                                {% endfor %}
                            {% else %}
                                <p>No other languages.</p>
                            {% endif %}
                                <a href="{{ path('hum_add_child', {hum: hum.id}) }}">Add other version</a>
                            </div>

                            <p>Policy <a href="{{ path("policy_edit", {policy: hum.policy.id}) }}">{{ hum.policy }}</a></p>
                            <p><a class="button" href="{{ path("hum_edit", {hum: hum.id}) }}">Edit Hum</a></p>
                        </div>
                    </div>
                </li>
                {% endif %}
            {% endfor %}
        </ul>


    </div>
{% endblock %}
